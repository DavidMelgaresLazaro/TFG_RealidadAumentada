<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewDetailPhoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="Photo" />

    <TextView
        android:id="@+id/textViewDetailModelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Model Name"
        android:textSize="16sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/textViewDetailComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:textSize="14sp"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/textViewDetailTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="14sp"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/textViewDetailSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="14sp"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/textViewDetailPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Position"
        android:textSize="14sp"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/textViewDetailDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textSize="14sp"
        android:paddingTop="4dp" />
</LinearLayout>
